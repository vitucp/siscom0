  <div class="card-body">
    <h5 class="card-title"></h5><br>

    <div class="conteudo conteudo_1">
        

        <!-- FORM MONITOR -->

        <form method="POST" name='form' action="/salvar-item" >
            <div class="row">
              <div class="col">
                  <div class="text-left">
                      <label for="">Marca</label>
                  </div>
                <input type="text" name='marca' class="form-control" placeholder="">
                <% erros.forEach(function(erros){ %>   
                  <% if(erros.msg == "3"){ %>
                    <div class="text-left">
                     <b style="color: red;">* Preencha esse campo</b>
                    </div>
                  <% } %>
                <% }) %>
              </div>
              <div class="col">
                <div class="text-left">
                    <label for="">Moledo</label>
                </div>
                <input type="text" name='modelo' class="form-control" placeholder="">
              </div>
            </div><br>


              <div class="row">
                <div class="col-md-6">
                    <div class="text-left">
                        <label for="">Cor</label>
                    </div>
                    <select name='cor' class="form-select" aria-label="Default select example">
                        <option selected></option>
                        <option value="preto">Preto</option>
                        <option value="braco">Branco</option>
                        <option value="cinza">Cinza</option>
                        <option value="outro">Outro</option>
                      </select>
                </div>

                <div class="col">
                  <div class="text-left">
                      <label >Quantidade</label>
                  </div>
                <input name='quantidade' id='numero' type="text" ="quantidade" class="form-control" placeholder="">
                <% erros.forEach(function(erros){ %>   
                  <% if(erros.msg == "2"){ %>
                    <div class="text-left">
                     <b style="color: red;">* Preencha esse campo</b>
                    </div>
                  <% } %>
                <% }) %>
              </div>

              <div class="row">
                <div class="col">
                  <div class="text-left">
                      <label >Preço</label>
                  </div>
                <input type="text" name="preco" id='money' class="form-control" placeholder="">
                <% erros.forEach(function(erros){ %>   
                  <% if(erros.msg == "1"){ %>
                    <div class="text-left">
                     <b style="color: red;">* Preencha esse campo</b>
                    </div>
                  <% } %>
                <% }) %>
              </div>
              </div>




                <div class="col-md-6"></div>
   
              </div><br>
                  <div class="text-right">
                    <input type="hidden" name='categoria' value="Teclado">
                    <a href='javascript:form.submit()' class="btn btn-success" >ir</a> 
                  </div>

                  </div>



      <div class="conteudo conteudo_2">

        <div class="row">
          <div class="col">
              <div class="text-left">
                  <label for="">Interface da Placa de Vídeo</label>
              </div>
            <input type="text" name='placadevideo' class="form-control" placeholder="">
          </div>
          <div class="col">
            <div class="text-left">
                <label for="">Chipset</label>
            </div>
            <select name='chipset' class="form-select" aria-label="Default select example">
              <option selected></option>
              <option value="sim">Sim</option>
              <option value="nao">Não</option>
            </select>
          </div>
        </div><br>

        <div class="row">
            <div class="col">
                <div class="text-left">
                    <label for="">Número de slots de memória</label>
                </div>
                <select name='NslotsMemoria' class="form-select" aria-label="Default select example">
                    <option selected></option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="4">4</option>
                    <option value="8">8</option>
                    <option value="16">16</option>
                  </select>
            </div>
            <div class="col">
              <div class="text-left">
                  <label for="">Modelo</label>
              </div>
              <input type="text" name='' class="form-control" placeholder="">
            </div>
          </div><br>

          <div class="row">
            <div class="col-md-6">
                <div class="text-left">
                    <label for="">Garantia</label>
                </div>
                <select name='garantia' class="form-select" aria-label="Default select example">
                    <option selected></option>
                    <option value="sem Garantia">Sem Garantia</option>
                    <option value="30">30 Dias</option>
                    <option value="90">90 Dias</option>
                    <option value="12mes">12 Mês</option>
                    <option value="2anos">2 Anos</option>
                    <option value="outros">Outro</option>
                  </select>
            </div>

            <div class="col-md-6"></div>

          </div><br>
              <div class="text-right">
                <a href='javascript:form.submit()' class="btn btn-success" >ir</a> 
              </div>
    
      </div>

   
  </div>
