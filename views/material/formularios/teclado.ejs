    <script type="text/javascript">
    $("#data1").mask("00/00/0000",{placeholder: "__/__/____"});
    $("#data2").mask("00/00/0000",{placeholder: "__/__/____"});
    $('#cpf').mask('000.000.000-00', {reverse: true});
    $('#telefone1').mask('(00) 00000-0000', {placeholder: "(00) 00000-0000"});
    $('#telefone2').mask('(00) 00000-0000');
    $("#rg").mask("999.999.999-99" || "999.999.999-a");
    $('#cep').mask('00000-000');
    $('#numero').mask('0#', {maxlength: false});
    $('#money').mask('000.000.000.000.000,00', {reverse: true});

    </script>


